{
  "name": "DevOps-Full-Stack-Env",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    // 1. AWS CLI 설치
    "ghcr.io/devcontainers/features/aws-cli:1": {},
    // 2. Terraform 설치
    "ghcr.io/devcontainers/features/terraform:1": {}
  },
  // 3. 리빌드 후 실행될 명령 (Ansible 설치)
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y python3-pip && pip3 install ansible",
  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform",
        "redhat.ansible",
        "ms-kubernetes-tools.vscode-kubernetes-tools"
      ]
    }
  }
}